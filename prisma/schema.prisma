generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id            Int             @id @default(autoincrement())
  name          String
  studyName     String
  content       String
  background    String
  password      String
  point         Int             @default(0)
  createAt      DateTime        @default(now())
  reactions     Reaction[]      @relation("StudyReactions")
  habit         Habit[]         @relation("StudyHabits")
  completeHabit CompleteHabit[] @relation("StudyHabitsComplete")
}

model Reaction {
  id        Int      @id @default(autoincrement())
  emoji     String
  count     Int      @default(0)
  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)
  studyId   Int
  createdAt DateTime @default(now())
}

model Habit {
  id             Int             @id @default(autoincrement())
  habitName      String
  study          Study           @relation(fields: [studyId], references: [id])
  studyId        Int
  completeHabits CompleteHabit[]
  createdAt      DateTime        @default(now())
}

model CompleteHabit {
  id        Int      @id @default(autoincrement())
  habit     Habit    @relation(fields: [habitId], references: [id], name: "completeHabit")
  study     Study    @relation(fields: [studyId], references: [id], name: "StudyHabitsComplete")
  studyId   Int
  habitId   Int
  createdAt DateTime @default(now())
}
