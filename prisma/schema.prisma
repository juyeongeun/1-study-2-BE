generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id            Int             @id @default(autoincrement())
  name          String
  studyName     String
  content       String
  background    String
  password      String
  point         Int             @default(0)
  createdAt     DateTime        @default(now())
  reaction      Reaction[]      @relation("StudyReactions")
  habit         Habit[]         @relation("StudyHabits")
  completeHabit CompleteHabit[] @relation("StudyHabitsComplete")
}

model Reaction {
  id        Int      @id @default(autoincrement())
  emoji     String
  count     Int      @default(0)
  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade, name: "StudyReactions")
  studyId   Int
  createdAt DateTime @default(now())
}

model Habit {
  id             Int             @id @default(autoincrement())
  habitName      String
  studyId        Int
  date           DateTime        @default(now())
  isActive       Boolean         @default(true)
  completeHabits CompleteHabit[] @relation("completeHabit")
  Study          Study           @relation(fields: [studyId], references: [id], name: "StudyHabits")
}

model CompleteHabit {
  id        Int      @id @default(autoincrement())
  habit     Habit    @relation(fields: [habitId], references: [id], name: "completeHabit")
  study     Study    @relation(fields: [studyId], references: [id], name: "StudyHabitsComplete")
  studyId   Int
  habitId   Int
  createdAt DateTime @default(now())
}
